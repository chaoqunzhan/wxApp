/* pages/aboutMe/aboutMe.wxss */
.about{
  background:#ededed;
  font-size:35rpx;
}

.slideImage{
  width:100%;
}

.intro{
  width:100%;
  margin-top:20rpx;
  background:#fff;
  /* border:1px solid #789; */
}

.intro-font{
  padding:5rpx 25rpx 20rpx 25rpx;
  color:#505050;
}

.intro text{
  line-height:45rpx;
  margin:70rpx 70rpx;
}

.contact{
  width:100%;
  margin-top:20rpx;
  background:#fff;
}

.contact-list{
  width:100%;
  font-size:30rpx;
  color:#808080;
  padding:15rpx 25rpx 0 25rpx;
}

.flag{
  height:20rpx;
  width:20rpx;
  margin-right:10rpx;
}

.contact-map{
  width:100%;
  height:160rpx;
}

.conImage{
  width:270rpx;
  height:135rpx;
  border-radius:10rpx;
  box-shadow:0rpx 0rpx 10rpx #808080;
  margin:10rpx 22rpx;
}

.address{
  padding:5rpx 25rpx 0rpx 25rpx;
  color:#505050;
}

.address:nth-child(4){
  padding-bottom:15rpx;
}

.perFlag{
   padding:5rpx 25rpx 15rpx 25rpx;
   display:flex;
   flex-direction:row;
}

.perFlag-child{
  margin:0 10rpx;
  color:#fff;
  border-radius:10rpx;
  padding:5rpx;
}

.bottom{
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  color:#a0a0a0;
  font-size:25rpx;
}
