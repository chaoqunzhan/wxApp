<view class='teacher'>
    <swiper 
    indicator-dots="{{indicatorDots}}"
    indicator-active-color="{{dotsColor}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
  >
    <block wx:for="{{imgUrls}}">
        <swiper-item>
            <image src="{{item}}" class="slideImage" />
        </swiper-item>
    </block>
  </swiper>

  <view class="club">
    <view class="join">
      <view class="join-1">
        <view class="join-11"></view>
        <view class="join-12">我是老师</view>
      </view>
      <view class="join-2">加入我们</view>
    </view>
    <view class="join">
      <view class="join-1">
        <view class="join-21"></view>
        <view class="join-12">我是学生</view>
      </view>
      <view class="join-2">寻找家教</view>
    </view>
  </view>

  <!--模板-->
  <template name="thList">
    <view class="list">
      <image class="photo" src="{{photoUrl}}" mode="aspectFill"></image>
      <view class="thDes">
        <view class="thName">
          <view>{{name}}</view> 
          <view class="thName-2">厦门大学</view>
        </view>
        <view class="thCollege">
          <view>{{college}}</view> 
          <view class="thCollege-2">{{grade}}</view>
        </view>
        <view class="thAuthen">
          <view>No.{{No}}</view> 
          <view class="thAuthen-2">{{Authen}}认证</view>
          <view>{{datetime}}</view> 
        </view>
      </view>
    </view>
  </template>
  <!--模板循环-->

  <view class="recommend">
    <view class="teacher-list"><image src="{{flag}}" class="flag"/>教员推荐:</view>
    <view wx:for="{{thList}}">
      <template is="thList" data="{{...item}}"/>
    </view>
  </view>



</view>